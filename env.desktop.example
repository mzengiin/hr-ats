# CVFlow Development Environment Configuration for Docker Desktop
# Copy this file to .env for development

# Database Configuration
POSTGRES_DB=cvflow_db
POSTGRES_USER=cvflow_user
POSTGRES_PASSWORD=cvflow_password
DATABASE_URL=postgresql://cvflow_user:cvflow_password@db:5432/cvflow_db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Development Settings
DEBUG=true
LOG_LEVEL=DEBUG
PYTHONUNBUFFERED=1

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8001/api/v1

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true
